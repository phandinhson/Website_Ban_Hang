
@model Website_BanDienThoai_Version1.Models.Users

<br />
<h2 class="text-info" style="padding-left:40px;font-size:30px;">Thay đổi thông tin cá nhân</h2>

<form method="post" asp-action="Edit">

    <div class="p-4 border rounded card-body">
        <input type="hidden" asp-for="Id" />
        <div class="form-row mt-3">
            <label for="Name">Name</label>
            <input type="text" name="Name" asp-for="Name" class="form-control input-sm" autocomplete="off" data-val="true">
        </div>
        <div class="form-row my-3">
            <label for="UserName">UserName</label>
            <input type="text" name="UserName" asp-for="UserName" class="form-control input-sm" autocomplete="off" data-val="true">
        </div>
        <div class="form-row my-3">
            <label asp-for="Phone"></label>
            <input type="text" name="Phone" data-val="true" autocomplete="off" asp-for="Phone" class="form-control input-sm">

        </div>
        <div class="form-row my-3">
            <label for="Email">Email</label>
            <input type="email" name="Email" asp-for="Email" class="form-control input-sm" autocomplete="off" data-val="true">
        </div>
        <div class="form-row my-3">
            <label for="Password">Password</label>
            <input type="text" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" data-val="true">
        </div>
        <div class="form-row my-3">
            <label asp-for="DateOfBith">DayOfBirth</label>
            <div class='input-group date' id='datetimepicker1'>
                <input type='date' class="form-control" asp-for="DateOfBith" />
            </div>
        </div>
        <div class="form-row my-3">
            <label asp-for="Gender">Gender:</label>&nbsp;
            <label>
                <input type="radio" asp-for="Gender" value=1 /> Male
            </label>&nbsp;
            <label>
                <input type="radio" asp-for="Gender" value=0 /> Female
            </label>
        </div>
        <div class="form-row py-3 justify-content-center">
            <input type="submit" class="btn btn-primary" asp-action="ChangeAccount" value="Update">
            <a asp-action="Index" class="btn btn-success ml-5">Back to List</a>
        </div>
    </div>
</form>

