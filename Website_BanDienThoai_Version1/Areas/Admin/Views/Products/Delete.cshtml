@model Website_BanDienThoai_Version1.Models.ViewModel.ProductViewModel

<br />
<div class="col-6 " style="padding-left:40px;font-size:30px;text-align:center">
    <p class="text-info">  Delete Product </p>
</div>
<br />
<br />
<div style="padding-left:50px;">
    <form method="post">
        <div class="p-4 border rounded row text-bold">
            <input hidden asp-for="Products.Id" />
            <div asp-validation-summary="ModelOnly" readonly class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Memory"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Memory" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Quantity" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Capacity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Capacity" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Manufacturer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Manufacturer" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Color"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Color" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Price" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Category.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTag"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.SpecialTag.Name" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-1">
            </div>
            <div class="col-3">
                <img src="@Model.Products.Image" style="border-radius:5px;border:1px solid #bbb9b9;" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>